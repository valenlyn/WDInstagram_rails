<h1>Listing posts</h1>

<%= link_to 'Upload img', new_post_path %>


  <% @posts.each do |post| %>
  	<div class="box">
	  	<img src=<%= post.photo_url %>>
	    <p>
	     <%= post.title %>
	     <%= post.caption %> <br>
	     <%= Time.new %>
	     ‚è± <% post.created_at %>
	     <%= link_to 'Show', post_path(post) %>
	     <%= link_to 'Edit', edit_post_path(post) %>
	     <%= link_to 'Delete', post_path(post),
	        method: :delete,
	        data: { confirm: 'Are you sure you want to delete this masterpiece?' } %>
	    </p>
	  </div>
  <% end %>